  
  
  <div id="login-card">
    <div >
      <div >
        <div class="px-4 py-2 mx-auto">
          <h2 >Login</h2>
        </div>
      </div>  

    <form class="form login-form p-4 bg-red-200">
      <div class="form-group p-2">
        <label for="email-login" class="font-mono">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="font-mono">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn" type="submit">login</button>
      </div>
    </form>
  </div>
</div>  

<div id="signup-card">
    <div>
      <div>
        <div>
          <h2>Signup</h2>        
        </div>
        <div > 
          <p >(must be 45 or older)</p>
        </div>
      </div>  

    <form class="form signup-form ">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input  class="form-input"  type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="font-mono">email:</label>
        <input  class="form-input"  type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="font-mono">password:</label>
        <input  class="form-input"  type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <label for="birthdate-signup" class="font-mono">birthdate:</label>
        <input  class="form-input"  type="date" id="birthdate-signup" name="birthdate"/>
      </div>
      <div class="form-group p-2 flex flex-wrap">
         <button class="btn" type="submit">signup</button>
      </div>
    </form>
  </div>
  </div>
</div>


